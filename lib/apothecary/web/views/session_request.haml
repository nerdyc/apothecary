.container
  %h1= @session_request.identifier

  %h2 Request
  %h3 Headers
  %pre= @session_request.http_request_headers_string
  - request_body = @session_request.http_request_body
  - unless request_body.nil?
    %h3 Body
    - if @session_request.http_request_is_json?
      %pre= JSON.pretty_generate(JSON.parse(@session_request.http_request_body))
    - else
      %pre= @session_request.http_request_body

  %h2 Response
  %h3 Headers
  %pre= @session_request.http_response_headers_string
  - response_body = @session_request.http_response_body
  - unless response_body.nil?
    %h3 Body
    - if @session_request.http_response_is_json?
      %pre= JSON.pretty_generate(JSON.parse(@session_request.http_response_body))
    - else
      %pre= @session_request.http_response_body

  %h2 Data
  %pre= JSON.pretty_generate(@session_request.data)

